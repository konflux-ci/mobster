{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": [ "at any time" ],
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "tekton": {
    "schedule": [ "at any time" ],
    "fileMatch": [
      "\\.yaml$",
      "\\.yml$"
    ],
    "includePaths": [
      "tasks/**",
      ".tekton/**"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [ "lockFileMaintenance", "dockerfile", "poetry" ],
      "schedule": [ "* 0-5 * * 1" ]
    },
    {
      "schedule": [ "at any time" ],
      "groupName": "tekton-tasks",
      "matchFileNames": [
        "tasks/**"
      ],
      "matchPackageNames": [
        "/^quay.io/konflux-ci/mobster/"
      ],
      "automerge": true
    }
  ]
}
